<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gölge -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray10"/> <!-- #90caf9 Gölge rengi -->
            <corners android:radius="25dp"/> <!-- Yuvarlatılmış köşeler -->
        </shape>
    </item>

    <!-- İç dikdörtgen -->
    <item android:left="1dp" android:right="1dp" android:top="0dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- İç renk -->
            <corners android:radius="25dp"/> <!-- Yuvarlatılmış köşeler -->
        </shape>
    </item>
</layer-list>
